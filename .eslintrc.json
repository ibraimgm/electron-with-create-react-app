{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["react-app", "plugin:jsx-a11y/recommended", "eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react", "jsx-a11y"
  ],
  "globals": {
    "process": true
  },
  "rules": {
    "react/jsx-uses-vars": [2],
    "react/jsx-uses-react": 0,
    "react/react-in-jsx-scope": 1,
    "no-unused-vars": ["error", {
      "vars": "all",
      "varsIgnorePattern": "^React$",
      "argsIgnorePattern": "^_",
      "ignoreRestSiblings": true
      }
    ],
    "eqeqeq": ["error", "smart"],
    "no-mixed-operators": "error",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
